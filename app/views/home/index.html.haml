- set_meta_tags keywords: %W[mamiamiga mami mama amiga loncheras maternidad consejos]

#slide
	%ul.slideme
		- @posts_slider.each do |post_slider|
			%li
				%a{href: post_path(post_slider), class:'image_post'}
					.image_post_img
						= image_tag(post_slider.slider_image)
					.image_post_title_slider
						= post_slider.title
%ul.featured_posts
	%li.home_featured
		= image_tag('cafecito')
	- @posts_featured.each do |post_featured|
		%li.home_featured
			%a{href: post_path(post_featured), class:'image_post'}
				.image_post_img
					= image_tag(post_featured.featured_image)
				.image_post_title_featured
					= post_featured.title
.row
	.line
	.col-md-8
		.top_post
			- post0 = @posts_public[0]
			.post_date
				= l(post0.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to post0.title, post0, class: 'no_link_style_dark'
			.post_content
				= truncate(sanitize(post0.content, :tags=>[]), :length => 700, :separator => ' ')
				%br
			= link_to 'LEER MÁS ', post0, class: 'read_more'

		.bottom_post
			- post1 = @posts_public[1]
			.post_date
				= l(post1.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to post1.title, post1, class: 'no_link_style_light'
			.post_content
				= truncate(sanitize(post1.content, :tags=>[]), :length => 700, :separator => ' ')
				%br
			= link_to 'LEER MÁS ', post1, class: 'read_more read_more_white'

		.top_post
			- post2 = @posts_public[2]
			.post_date
				= l(post2.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to post2.title, post2, class: 'no_link_style_dark'
			.post_content
				= truncate(sanitize(post2.content, :tags=>[]), :length => 700, :separator => ' ')
				%br
			= link_to 'LEER MÁS ', post2, class: 'read_more'

		.bottom_post
			- post3 = @posts_public[3]
			.post_date
				= l(post3.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to post3.title, post3, class: 'no_link_style_light'
			.post_content
				= truncate(sanitize(post3.content, :tags=>[]), :length => 700, :separator => ' ')
				%br
			= link_to 'LEER MÁS ', post3, class: 'read_more read_more_white'

	.col-md-4
