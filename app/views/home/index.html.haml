- title 'Mami Amiga'
- set_meta_tags :og => {:title => 'Mami Amiga', :url => 'http://mamiamiga.com', :image => image_url('logo-web.png'), :description => 'Mamá a tiempo completo de una pequeñita que amo con locura. Aquí encontrarás ideas, experiencias e inspiración para disfrutar al máximo ser mamá.', :fb => { :app_id => '241073229593702' } }
