- title 'Mami Amiga'
- set_meta_tags :og => {:title => 'Mami Amiga', :url => 'http://mamiamiga.com', :image => image_url('logo-web.png'), :description => 'Mamá a tiempo completo de una pequeñita que amo con locura. Aquí encontrarás ideas, experiencias e inspiración para disfrutar al máximo ser mamá.' }
- set_meta_tags description: 'Mamá a tiempo completo de una pequeñita que amo con locura. Aquí encontrarás ideas, experiencias e inspiración para disfrutar al máximo ser mamá.'
- set_meta_tags keywords: %W[mamiamiga mami mama amiga loncheras maternidad consejos]

#slide
	%ul.slideme
		- @posts_slider.each do |post_slider|
			%li
				%a{href: post_path(post_slider), class:'image_post'}
					.image_post_img
						= image_tag(post_slider.slider_image)
					.image_post_title_slider
						= post_slider.title
%ul.featured_posts
	- @posts_featured.each do |post_featured|
		%li.home_featured
			%a{href: post_path(post_featured), class:'image_post'}
				.image_post_img
					= image_tag(post_featured.featured_image)
				.image_post_title_featured
					= post_featured.title
.row
	.line
	.col-md-8
		.top_post
			.post_date
				= l(@posts_public.first.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to @posts_public.first.title, @posts_public.first, class: 'no_link_style_dark'
			.post_content
				= truncate(sanitize(@posts_public.first.content, :tags=>[]), :length => 1400, :separator => ' ')
				%br
				= link_to 'LEER MÁS ', @posts_public.first, class: 'read_more'

		.bottom_post
			.post_date
				= l(@posts_public.last.published_at, :format => '%A %d de %B del %Y, %H:%M')
			.post_title
				= link_to @posts_public.last.title, @posts_public.last, class: 'no_link_style_light'
			.post_content
				= truncate(sanitize(@posts_public.last.content, :tags=>[]), :length => 1400, :separator => ' ')
				%br
			= link_to 'LEER MÁS ', @posts_public.last, class: 'read_more read_more_white'

	.col-md-4
		= render partial: 'sidebar'

