.col-md-8
	- @posts.each do |post|
		.post_date
			= l(post.published_at, :format => '%A %d de %B del %Y, %H:%M')
		.post_title
			= post.title
		.post_content
			= truncate(post.content_notags, :length => 600, :separator => ' ', escape: false)
			= link_to 'LEER M√ÅS ', post, class: 'read_more'
	= will_paginate @posts

.col-md-4
	= render partial: 'sidebar'
